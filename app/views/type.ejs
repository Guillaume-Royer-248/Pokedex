<%- include('partials/header'); -%>

<h2 class="PageTitle">
<% if(!pokemons[0]) {%>
    Il n'y pas pas de Pokémon pour cette catégorie
    <%} else {%>
    Les Pokémon <%=pokemons[0].name%>
<%}%>

</h2>

<section class="mainList">

    <%for (const pokemon of pokemons) {%>

    <article class="pokemonCard">
        <a href="/detail/<%=pokemon.numero%>"><img src="../img/<%=pokemon.numero%>.png" alt="Image de <%=pokemon.nom%>" class="pokemon_img"></a>
        <h2 class="pokemon_title">#<%=pokemon.numero%><span class="pokemon_name"><%=pokemon.nom%></span></h2>

    </article>

    <%}%>

</section>



<%- include('partials/footer'); -%>